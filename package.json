{
  "name": "monitor",
  "version": "1.0.0",
  "description": "monitor demo",
  "main": "index.js",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:vue-ui": "pnpm run type:src && pnpm --filter @monitor/vue-ui run build && pnpm run mv-type",
    "dev:example": "pnpm --filter @monitor/example run dev",
    "type:node": "tsc -p tsconfig.node.json --noEmit --composite false",
    "clean:type": "rimraf ./dist",
    "type:src": "pnpm run clean:type && vue-tsc -p tsconfig.src.json --composite false --declaration --emitDeclarationOnly",
    "mv-type": "tsx ./scripts/dts-mv.ts",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx,.vue --fix ./",
    "lint:style": "stylelint --fix ./**/*.{css,scss,vue,html}"
  },
  "keywords": [
    "monitor"
  ],
  "author": "yuanbo",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vue": "^9.27.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "sass": "^1.77.6",
    "stylelint": "^16.6.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-stylistic": "^0.4.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.0.24"
  },
  "dependencies": {
    "react": "^18.3.1",
    "vue": "^3.4.31"
  }
}
